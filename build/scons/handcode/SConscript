#cc_files += [ os.path.join( 'main', 'make', 'pigment_operation_add.cpp' ) ]
#cc_files += [ os.path.join( 'main', 'make', 'pigment_operation_subtraction.cpp' ) ]
#cc_files += [ os.path.join( 'main', 'make', 'pigment_pattern_color_const.cpp' ) ]
